<div class="col-md-12">

  <a href="<%= PhoenixCrud.Router.users_path%>" class="btn btn-default btn-sm">
    Back
  </a>

  <h1>
    User: <%= @user.content %>
  </h1>

  <div class="actions">
    <a href="<%= PhoenixCrud.Router.edit_user_path(id: @user.id) %>" class="btn btn-primary">
      Edit
    </a>

    <form action="/users/<%= @user.id %>" method="post">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>

<script>
  $("form").on("submit", function(event) {
    event.preventDefault();

    $that = this;

    $.ajax({
      url: $that.getAttribute('action'),
      type: "DELETE",
      data: $('form').serialize(),
      success: function(data) {
        window.location = data.location;
      }
    });
  });
</script>
